<UserControl x:Class="MAV.Client.MVVM.View.HolidayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MAV.Client.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Urlaubsplaner"
                   Foreground="Black"
                   FontSize="30"
                   />

        <Calendar Name="cldSample" SelectionMode="MultipleRange" />
        <Label Width="100">Ausgewähltes Datum:</Label>
        <ListBox ItemsSource="{Binding ElementName=cldSample, Path=SelectedDates}" Width="100" />

    </StackPanel>
</UserControl>
